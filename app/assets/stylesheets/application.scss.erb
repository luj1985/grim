* {
  box-sizing: border-box;
}

html, body {
  padding: 0;
  margin: 0;
}

body {
  background-image: url(<%= asset_path 'background.jpg' %>);
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100%;
  font-size: 12px;
  color: white;
}

header.logo {
  margin-top: 20px;
  display: block;
  text-align: center;

  img {
    width: 237px;
  }
}

main {
  padding: 12px;
}

h3 {
  font-size: 12px;
}

h3::before {
  content: ' ';
  background-color: yellow;
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-right: 4px;
  transform: translateY(2px);
}

ul.items {
  list-style: none;
  padding: 0;

  h3 {
    margin: 4px 0;
  }
  p {
    padding-left: 16px;
    margin: 4px 0;
  }
}

main.home {
  h1 {
    font-size: 28px;
    text-align: center;
  }
  h1.en {
    font-size: 20px;
    text-transform: uppercase;
  }
}

footer.join {
  text-align: center;
  .button {
  	display: inline-block;
  	width: 120px;
  	height: 120px;
  	background-image: url(<%= asset_path 'button.png' %>);
  	background-repeat: no-repeat;
  	background-position: top;
	background-size: 100%;
	padding-top: 50px;
	color: white;
  }
}






.register.form {
  padding: 14px;
  input {
    margin: 4px auto;
    font-size: 16px;
    padding: 4px;
    display: block;
    width: 240px;
  }

  input[type="submit"] {
    margin-top: 30px;
    background-color: rgb(25,205, 253);
    border-style: none;
    width: 120px;
  }
}



.wechat.qr {
  text-align: center;
  img {
    width: 150px;
  }
}