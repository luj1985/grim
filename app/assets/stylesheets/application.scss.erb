* {
  box-sizing: border-box;
}

html, body {
  padding: 0;
  margin: 0;
}

html {
  font-family: "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
  font-size: 16px;
}

@media screen and (max-width: 320px) {
  html {
    font-size: 12px;
  }
  footer.join .button {
    padding-top: 52px !important;
  }
}

body {
  background-image: url(<%= asset_path 'background.jpg' %>);
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100%;
  color: white;
}

body.register, body.finished {
  background-image: url(<%= asset_path 'background.dark.jpg' %>);
}

body.admin {
  background-image: none;
  color: black;
}

header {
  display: block;
  text-align: center;
}

main {
  padding: 0 1rem;
}
main.finished {
  padding: 0 2.5rem;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
  max-width: 960px;
  width: 100%;
  margin: 0 auto;
}

td {
  border-bottom: 1px solid gray;
}

th {
  border-bottom: 2px solid black;
}

td, th {
  padding : .5rem 1rem;
}


p {
  line-height: 1.5rem;
  text-indent: 1rem;
}

p.message {
  text-align: center;
  text-indent: 0;
}

p.message.follow {
  margin: 6rem 0 2rem 0;
  padding-left: 4rem;
}

p.follow span {
  text-align: left;
  display: inline-block;
}

p.follow::before {
  content: ' ';
  background-image: url(<%= asset_path 'down.png' %>);
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100%;
  display: inline-block;
  width: 3.5rem;
  height: 3.5rem;
  position: absolute;
  transform: translate(-4rem, -5px);
}

h1 {
  margin-top: 5rem;
  font-size: 2rem;
  text-align: center;
  font-weight: normal;
}

h1.large {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

h2 {
  padding: 0 1rem;
  font-weight: normal;
}

form {
  padding: 1rem;
}

.field_with_errors input {
  border-color: red;
}

.errors_container {
  text-align: center;
  border: 1px solid red;
}

.error_explanation {
  display: inline-block;
  text-align: left;
  h2 {
    margin-bottom: .5rem;
  }
}

input {
  margin: 1rem auto;
  font-size: 1rem;
  padding: .8rem .5rem;
  display: block;
  width: 18rem;
  border-radius: 0;
}

input[type="submit"] {
  margin-top: 5rem;
  -webkit-appearance: none;
  appearance: none;
  border-radius: 0;
  background-color: rgb(25,205, 253);
  border-style: none;
  font-size: 1.5rem;
  color: white;
  width: 12rem;
}

h3 {
  font-size: 1rem;
}

h3::before {
  content: ' ';
  background-color: yellow;
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-right: 4px;
  transform: translateY(2px);
}

img.logo {
  margin-top: 70px;
  width: 220px;
}

img.welcome {
  margin-top: 90px;
  width: 190px;
}

img.wechat.qr {
  width: 14rem;
}

ul.items {
  list-style: none;
  padding: 0;

  h3 {
    margin: 4px 0;
  }
  p {
    margin: 4px 0;
  }
}
footer {
  text-align: center;
}

footer .button {
  display: inline-block;
  font-size: 1em;
  width: 150px;
  height: 150px;
  background-image: url(<%= asset_path 'button.png' %>);
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100%;
  padding: 48px 0 0 4px;
  color: white;
  text-decoration: none;
}





