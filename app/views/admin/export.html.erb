<% content_for :background do %>admin<% end %>
<h1><a href="/admin/export.csv">导出注册信息</a></h1>
<table>
  <thead>
    <th>ID</th>
    <th>公司</th>
    <th>姓名</th>
    <th>电话</th>
    <th>邮箱</th>
    <th>职务</th>
  </thead>
  <tbody>
    <% @registrations.each do |r| %>
    <tr>
      <td><%= r.id %></td>
      <td><%= r.company %></td>
      <td><%= r.name %></td>
      <td><%= r.telephone %></td>
      <td><%= r.email %></td>
      <td><%= r.duty %></td>
    <% end %>
  </tbody>
</table>